@model PrototypeP1.Models.Farmer

@{
    ViewData["Title"] = "FarmerDetails";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ffff00; 
        }

        .header {
            font-family: "Comic Sans MS", cursive; 
            color: white; 
            text-align: center; 
            font-size: 50px; 
        }

        .logo {
            width: 100px; 
            display: block; 
            margin: 0 auto; 
        }

        hr {
            border-color: white; 
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
            border: 1px solid black; 
        }

        .btn-primary {
            background-color: white; 
            color: black; 
        }

        .logout-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="header">Farm Central</h1>
        

        <div class="logo-container">
            <img src="~/assets/farmer.png" alt="Logo" class="logo" />
            
        </div>

        <h1>Farmer Details</h1>

        <div>
            <h4>Farmer</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FarmerID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FarmerID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.first_name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.first_name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.last_name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.last_name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.password)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.password)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.email)
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Edit", "EditFarmer", new { /* id = Model.PrimaryKey */ }) |
            <a asp-action="FarmerIndex">Back to List</a>
        </div>
        <form id="logoutForm" method="post" asp-action="Login" asp-controller="Employee" class="logout-button">
            <button type="submit">Logout</button>
        </form>
    </div>
</body>
</html>
