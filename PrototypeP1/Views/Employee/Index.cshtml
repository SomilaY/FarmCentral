@model IEnumerable<PrototypeP1.Models.Employee>

@{
    ViewData["Title"] = "Employee Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ffff00; 
        }

        .header {
            font-family: "Comic Sans MS", cursive;
            color: white; 
            text-align: center; 
            font-size: 50px; 
        }

        .logo-container {
            display: flex;
            justify-content: center;
        }

        .logo {
            max-width: 150px; 
        }

        table {
            border-collapse: collapse; 
            width: 100%;
            outline: 1px solid white; 
        }

        th, td {
            border: 1px solid white;
            padding: 8px;
            text-align: left;
        }

         .logout-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="header">Farm Central</h1> 

        <div class="logo-container">
            <img src="~/assets/farmer.png" alt="Logo" class="logo"> 
        </div>

        <h2>Employee Index</h2> 

        <p>
            <a asp-controller="Employee" asp-action="Create">Create New</a>
        </p>
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee_ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.first_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.last_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.first_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.last_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Employee_ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Employee_ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Employee_ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
        <p>
            <a asp-controller="Employee" asp-action="FarmerIndex">View Farmer List</a>
        </p>
        <p>
            <a asp-controller="Employee" asp-action="ProductIndex">View Product List</a>
        </p>

        </p>
        <form id="logoutForm" method="post" asp-action="Login" asp-controller="Employee" class="logout-button">
        <button type="submit">Logout</button>
    </form>
    </div>

   
    <script src="~/js/site.js"></script>
</body>
</html>
