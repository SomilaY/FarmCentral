@model IEnumerable<PrototypeP1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ffff00; 
        }

        .header {
            font-family: "Comic Sans MS", cursive; 
            color: white;
            text-align: center; 
            font-size: 50px; 
        }

        .logo-container {
            display: flex;
            justify-content: center;
        }

        .logo {
            max-width: 150px; 
        }

        table {
            border-collapse: collapse; 
            width: 100%;
            outline: 1px solid white; 
        }

        th, td {
            border: 1px solid white;
            padding: 8px;
            text-align: left;
        }

        .logout-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="header">Farm Central</h1> <

        <div class="logo-container">
            <img src="~/assets/farmer.png" alt="Logo" class="logo"> 
        </div>

        <h1>Product Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>

        <form method="get" action="@Url.Action("Index")">
            <div>
                <label for="supplier">Supplier:</label>
                <input type="text" name="supplier" value="@Context.Request.Query["supplier"].ToString()" />
            </div>
            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" name="startDate" value="@Context.Request.Query["startDate"].ToString()" />
            </div>
            <div>
                <label for="endDate">End Date:</label>
                <input type="date" name="endDate" value="@Context.Request.Query["endDate"].ToString()" />
            </div>
            <div>
                <input type="submit" value="Search" />
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductSupplier)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateAdded)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductSupplier)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAdded)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <form id="logoutForm" method="post" asp-action="Login" asp-controller="Employee" class="logout-button">
        <button type="submit">Logout</button>
    </form>
</body>
</html>
